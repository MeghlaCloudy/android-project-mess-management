<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- তারিখ সিলেক্ট -->
        <DatePicker
            android:id="@+id/datePickerBazar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- আইটেম নাম -->
        <EditText
            android:id="@+id/etItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="আইটেমের নাম (যেমন: চাল, তেল)"
            android:inputType="text"
            android:background="@android:drawable/edit_text"
            android:textColor="@color/black"
            android:padding="12dp" />

        <!-- টাকার পরিমাণ -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="টাকার পরিমাণ"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:textColor="@color/black"
            android:padding="12dp" />

        <!-- কে দিয়েছে (স্পিনার) -->
        <Spinner
            android:id="@+id/spinnerPaidBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- সেভ বাটন -->
        <Button
            android:id="@+id/btnSaveBazar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বাজার সেভ করুন"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white" />

        <!-- সেভ হওয়া বাজারের লিস্ট -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBazar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:nestedScrollingEnabled="false" /> <!-- RecyclerView স্ক্রল না করে LinearLayout স্ক্রল করবে -->

    </LinearLayout>
</ScrollView>