<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinnerMonthYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_month" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="বিল হিসাব করুন"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvTotalMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="মোট মিল: ০"
        android:textSize="18sp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvTotalBazar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="মোট খরচ: ০.০০ টাকা"
        android:textSize="18sp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvPerMealCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="প্রতি মিলের দাম: ০.০০ টাকা"
        android:textSize="18sp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tvBillDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="প্রত্যেক মেম্বারের বিল:\n"
        android:textSize="16sp"
        android:layout_marginTop="24dp" />

    <!-- নতুন বাটন – PDF + শেয়ার -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/btnExportPdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PDF ডাউনলোড"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="শেয়ার করুন" />
    </LinearLayout>

</LinearLayout>